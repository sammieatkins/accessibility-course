---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Thank You">
  <main id="main-content" class="flex justify-center flex-grow">
    <div class="max-w-[80ch] p-6 text-text font-sans bg-lightgray rounded">
      <h1 class="text-2xl font-bold mb-4 text-accent">
        Thanks for reaching out!
      </h1>
      <p class="mb-4">
        Your message has been submitted.
      </p>
      <a
        href="/"
        class="inline-block mt-4 px-4 py-2 bg-accent text-white rounded hover:bg-accentdark"
      >
        Return Home
      </a>
    </div>
  </main>
</BaseLayout>
